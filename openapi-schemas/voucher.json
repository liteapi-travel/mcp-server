                        },
                        "maximum_discount_amount": {
                          "type": "number",
                          "description": "Maximum discount amount that can be applied using the voucher in voucher currency. e.g. a with a maximum_discount_amount of 50 in USD, will discount from 0 to USD$50"
                        },
                        "currency": {
                          "type": "string",
