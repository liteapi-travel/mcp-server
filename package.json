{
  "name": "liteapi-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for LiteAPI - dynamically generates tools from OpenAPI specs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "liteapi-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "next build",
    "build:stdio": "tsc",
    "start": "next start",
    "dev": "next dev",
    "dev:stdio": "tsx src/index.ts",
    "watch": "tsc --watch",
    "test": "node test-server.js",
    "test:mcp": "LITEAPI_API_KEY=${LITEAPI_API_KEY:-sand_c0155ab8-c683-4f26-8f94-b5e92c5797b9} npx tsx scripts/test-mcp-http.ts",
    "inspect": "npx @modelcontextprotocol/inspector node run-mcp-server.mjs"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "liteapi",
    "openapi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "mcp-handler": "^1.0.7",
    "next": "^16.1.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vercel/node": "^5.6.7",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
