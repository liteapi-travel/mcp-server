{
  "name": "liteapi-mcp-server",
  "version": "1.0.1",
  "description": "MCP server for LiteAPI hotel booking services - compatible with n8n workflows",
  "main": "dist/index.js",
  "bin": {
    "liteapi-mcp-server": "dist/index.js"
  },
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "build": "npx tsc && echo '#!/usr/bin/env node' | cat - dist/index.js > temp && mv temp dist/index.js && chmod 755 dist/index.js",
    "inspect": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "node test/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "liteapi",
    "hotel-booking",
    "travel-api",
    "n8n",
    "automation"
  ],
  "author": "LiteAPI",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "openapi-schemas/**/*",
    "README.md"
  ],
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.13",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.1",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "ajv": "^8.17.1",
    "axios": "^1.8.4",
    "express": "^4.21.2",
    "openapi-backend": "^5.11.1",
    "zod": "^3.24.2"
  }
}
